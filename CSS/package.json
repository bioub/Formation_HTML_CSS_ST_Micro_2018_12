{
  "dependencies": {
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.6"
  },
  "devDependencies": {
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "prettier": "1.15.3",
    "stylelint": "~9.9.0",
    "stylelint-config-recommended": "^2.1.0"
  },
  "scripts": {
    "lint": "stylelint **/*.{css,scss,html}",
    "prettier": "prettier --write '**/*.{css,scss,html}'",
    "build:scss": "node-sass --recursive --output exemple-sass/css exemple-sass/scss",
    "watch:scss": "nodemon --ext scss --exec npm run build:scss"
  }
}
